# Example Environment Variables for Order Management System
# Copy this file to .env and fill in your actual credentials.
# DO NOT commit the actual .env file to version control.

# BSE STAR MF Credentials
BSE_USER_ID="YOUR_BSE_USER_ID"
BSE_PASSWORD="YOUR_BSE_PASSWORD"
BSE_MEMBER_CODE="YOUR_BSE_MEMBER_CODE"

# BSE STAR MF API Endpoints
# Base URL for non-SOAP APIs (like Client Registration)
BSE_BASE_URL="https://bsestarmfdemo.bseindia.com/StarMFCommonAPI"
# Path for Client Registration API
BSE_REGISTRATION_PATH="/ClientMaster/Registration"

# WSDL URLs for SOAP APIs (Order Entry and Authentication)
# Use Demo URLs below or replace with Production URLs
BSE_ORDER_ENTRY_WSDL="https://bsestarmfdemo.bseindia.com/MFOrderEntry/MFOrder.svc?wsdl"
BSE_AUTH_WSDL="https://bsestarmfdemo.bseindia.com/MFOrderEntry/MFOrder.svc?wsdl"

# Session Timeout for BSE Authentication (in seconds)
BSE_SESSION_TIMEOUT=3600

# Application Secret Key (for JWT - generate a strong random key)
SECRET_KEY="generate_a_strong_random_secret_key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

